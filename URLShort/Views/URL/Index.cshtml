@model URLShort.Models.URLViewModel
@{
    ViewData["Title"] = "Login";
}
<h1>Shortener</h1>
<div class="row">
    <section>
        <form id="shorten" method="post">
            <h4>Please enter the URL you would like to be shortened.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LongURL"></label>
                <input asp-for="LongURL" class="form-control" />
                <span asp-validation-for="LongURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Shorten</button>
            </div>
        </form>
    </section>
    <div style="margin-left:30px; margin-top:100px" >
        <label>Shortened URL:</label>  @ViewBag.ShortenedURL
    </div>
    <button style="margin-top:200px; margin-left:auto; margin-right:auto;position:absolute" id="myButton" class="float-right submit-button">Get a Long URL from a Shortened URL</button>

    <script type="text/javascript">document.getElementById("myButton").onclick = function () {
            window.location.href = '@Url.Action("Long", "URL", new {ID = Model.ID})';
        };</script>

</div>
